<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/map_search_navage_icon"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_centerVertical="true"
        android:src="@drawable/marker" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_toRightOf="@id/map_search_navage_icon"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="18.0sp"
            android:id="@+id/map_search_navage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chain" />
        <TextView
            android:textSize="13.0sp"
            android:textColor="#ffc1c0c0"
            android:id="@+id/map_search_navage_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:text="@string/chain"
            android:layout_below="@id/map_search_navage_title" />
    </LinearLayout>

</RelativeLayout>